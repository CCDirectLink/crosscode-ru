{
  "private": true,
  "engines": {
    "node": ">=11.0.0"
  },
  "scripts": {
    "build:styles": "node-sass --recursive --output dist/styles --source-map true src/styles",
    "watch:styles": "node-sass --recursive --output dist/styles --source-map true src/styles --watch",
    "clean:headless": "rm -rv dist-headless/",
    "build:headless": "tsc --project ./tsconfig-headless.json",
    "watch:headless": "tsc --project ./tsconfig-headless.json --watch"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.6",
    "@types/request": "^2.48.5",
    "node-sass": "^5.0.0"
  },
  "dependencies": {
    "jsdom": "^16.4.0",
    "request": "^2.88.2"
  }
}
